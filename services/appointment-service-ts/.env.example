# Appointment Service Environment Variables

# Server Configuration
PORT=5002
NODE_ENV=development
SERVICE_NAME=appointment-service

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/aesthenda-appointments

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq:5672
RABBITMQ_NOTIFICATION_QUEUE=appointment_notifications
RABBITMQ_PAYMENT_QUEUE=payment_events
RABBITMQ_EVENTS_EXCHANGE=appointment_events

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Maximum 100 requests per window

# Default Tenant (Optional)
DEFAULT_TENANT_ID=default_tenant 