# API Gateway Environment Variables
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
BODY_LIMIT=100kb

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true
REDIS_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_STANDARD_HEADERS=true
RATE_LIMIT_LEGACY_HEADERS=false

# CORS Configuration
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Service URLs
USER_SERVICE_URL=http://user-service:5001
USER_SERVICE_TIMEOUT=5000
APPOINTMENT_SERVICE_URL=http://appointment-service:5002
APPOINTMENT_SERVICE_TIMEOUT=5000
NOTIFICATION_SERVICE_URL=http://notification-service:5003
NOTIFICATION_SERVICE_TIMEOUT=5000
PAYMENT_SERVICE_URL=http://payment-service:5004
PAYMENT_SERVICE_TIMEOUT=5000

# GraphQL Configuration
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true
GRAPHQL_TRACING=false

# Logging
LOG_LEVEL=info

# Tenant Configuration
MULTI_TENANT_ENABLED=false
DEFAULT_TENANT_ID=default